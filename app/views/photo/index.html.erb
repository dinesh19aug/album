<head>
<title>
	Index
</title>
</head>
		<div class="span12">
			<div class="index-body">
			<% @photo.each do |photo| %>
				
				<div id="gallery">
					
					<%if current_user %>
						<%= image_tag photo.image_url,:width =>"800",:height=>"533"%>

						<%= link_to 'Edit', edit_photo_path(photo) %>
						<%= link_to 'Destroy', photo, confirm: 'Are you sure?', method: :delete%>
					<% else %>

						<%= image_tag photo.image_url%>
					<%end%>
				<br>
			<%end%>

			</div>
			<br>
			<%if current_user %>
				
			<% else %>
				<script>
   					$('#gallery').galleria({
        				width:960,
        				height:533,
        				transition:'fadeslide',
        				fullscreenDoubleTap:true,
        				//autoplay: 3000,
        				carousel:true


    				});
				</script>	
			<%end%>
			
			
			<p>
				<%if current_user %>
				<%= link_to 'Add New Photo', new_photo_path %><br>
						
				<%= link_to 'Back', admin_index_path %>
				<%end%>
			</p>
	</div>
</div>
